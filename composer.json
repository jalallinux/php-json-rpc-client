{
    "name": "jalallinux/php-json-rpc-client",
    "description": "This Package helps developers to easily connect to RPC servers.",
    "keywords": [
        "jalallinux",
        "php-json-rpc-client"
    ],
    "homepage": "https://github.com/jalallinux/php-json-rpc-client",
    "license": "MIT",
    "authors": [
        {
            "name": "JalalLinuX",
            "email": "smjjalalzadeh93@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2|^7.3|^7.4|^8.0|^8.1|^8.2",
        "guzzlehttp/guzzle": "^7.2"
    },
    "require-dev": {
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "JalalLinuX\\JsonRpcClient\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JalalLinuX\\JsonRpcClient\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
